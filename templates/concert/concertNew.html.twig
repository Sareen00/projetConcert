{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Créer un nouveau concert{% endblock %}

{% block body %}
    <div class="container">
        <h1>Créer un nouveau concert</h1>

    {{ form_start(form) }}
        {{ form_row(form.date) }}
        {{ form_row(form.sartHour) }}
        {{ form_row(form.endHour) }}
        {{ form_row(form.artist) }}
        {{ form_row(form.playlist) }}
        <button type="submit">Enregistrer</button>
    {{ form_end(form) }}
    </div>

{% endblock %}