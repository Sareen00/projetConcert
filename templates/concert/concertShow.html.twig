{% extends "base.html.twig" %}

{% block title %}{{ concert.artist.getGroupName() }} en concert{% endblock %}

{% block body %}

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <img src="../../public/images/artist/{{  concert.artist.getArtistPicture() }}" alt="Photo de l'artiste" class="img-fluid">
    </div>
    <div class="col-md-6">
    <h2>{{ concert.artist.getGroupName() }}</h2>
        <p>Date : {{ concert.date.format('d/m/Y') }}</p>
        <p>Heure de début : {{ concert.sartHour.format('H:i:s') }}</p>
        <p>Heure de fin : {{ concert.endHour.format('H:i:s') }}</p>
        {# <p>Prix : {{ concert.price }} €</p> #}
        {# <a href="{{ path('reservation', {'id': concert.id}) }}" class="btn btn-primary">Réserver</a> #}
        <a class="btn btn-secondary float-left" href="{{ path('concert_list') }}">Retour</a>
    </div>
  </div>
</div>
{% endblock %}